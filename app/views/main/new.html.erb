<div class="container" style="text-align: center">
  <%= form_with scope: :receipt, url: recipes_path, local: true do |form| %>
    <p>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :text %>
      <%= form.text_area :text %>
    </p>

    <p>
      <%= form.label :Tags %>
      <%= form.text_area :tags, placeholder: "Tag1, Tag2, Tag3" %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
  <%= link_to 'Back', list_path %>
</div>